.xac--is-loading
  opacity 0

.c-sankey
  min-height 100vh

  &__node
    cursor pointer

    rect
      stroke #000
      fill-opacity .9
      &:hover
        fill-opacity 1

    &:hover
      .c-sankey
        &__value
          fill white

    &--default
      &:hover
        .c-sankey
          &__value
            fill black

  &__link
    fill none
    stroke #000
    stroke-opacity .2
    cursor pointer
    &:hover
      stroke-opacity .4

  &__entity
    &--default
      cursor default
      &:hover
        stroke-opacity .2

  &__loader
    border 5px solid #f3f3f3
    border-top 5px solid #3498db
    border-radius 50%
    width 50px
    height 50px
    animation spin 500ms linear infinite
    margin auto

  &__value
    transform rotate(-90deg)
    font-size 12px

  &__msg
    text-align center
    display block
    padding 5px

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

xac-sankey, consortia-sankey, react-consortia-sankey
  width 100%
  display block
  height 100%